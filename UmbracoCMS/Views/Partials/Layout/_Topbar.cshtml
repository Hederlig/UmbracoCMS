@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomePage>

@{
    var rootContent = Umbraco.ContentAtRoot();
    var siteSetting = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAdress = siteSetting?.ContactAddress ?? "Ingen address angiven";
}

<div class="bg-[var(--primary-color)]">
    <div class="max-w-7xl mx-auto px-5 flex items-center justify-between">
        <p class="text-xl text-[var(--link-color)] ">@contactAdress</p>
        <div class="flex">
            @if (siteSetting?.PlatformList != null)
            {

                @foreach (var item in siteSetting.PlatformList)
                    {
                    if (item.Content is SocialMediaItem mediaItem)
                        {
                            switch (mediaItem.PlatformName!.ToLower())
                            {
                                case "facebook":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center px-3 p3 text-base text-[var(--link-color)] border-l border-[var(--background-color)] last:border-r">
                                    <i class="fa-brands fa-facebook-f"></i>
                                </a>
                                break;

                                case "linkedin":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center px-3 p3 text-base text-[var(--link-color)] border-l border-[var(--background-color)] last:border-r">
                                    <i class="fa-brands fa-linkedin-in"></i>
                                </a>
                                break;

                                case "x":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center px-3 p3 text-base text-[var(--link-color)] border-l border-[var(--background-color)] last:border-r">
                                    <i class="fa-brands fa-x"></i>


                                </a>
                                
                                break;
                            }
                        }
                    }

                }

        </div>
    </div>
</div>